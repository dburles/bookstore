{
  "name": "bookstore",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "10",
    "npm": "6"
  },
  "browserslist": [
    "< 0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "start": "NODE_ENV=development parcel src/index.html",
    "build": "parcel build --detailed-report src/index.html",
    "clean": "rm -rf .cache",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@storybook/addon-actions": "^4.1.12",
    "@storybook/addon-links": "^4.1.12",
    "@storybook/addons": "^4.1.12",
    "@storybook/react": "^4.1.12",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-import-order-alphabetical": "0.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.2",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@sindresorhus/fnv1a": "^1.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "rebass": "^3.0.1",
    "scheduler": "^0.13.2",
    "styled-components": "^4.1.3",
    "styled-system": "^3.2.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "prettier",
      "react",
      "react-hooks",
      "import",
      "eslint-plugin-import-order-alphabetical"
    ],
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier/react",
      "plugin:import/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "import/newline-after-import": "error",
      "import-order-alphabetical/order": [
        "error",
        {
          "newlines-between": "never"
        }
      ]
    }
  },
  "babel": {
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/transform-runtime",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragmaFrag": "React.Fragment"
        }
      ]
    ]
  }
}
